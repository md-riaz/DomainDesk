# ===========================================
# DomainDesk - Testing Environment
# ===========================================
# Used for automated testing

# Application
APP_NAME="DomainDesk Test"
APP_ENV=testing
APP_KEY=base64:GENERATE_WITH_php_artisan_key:generate
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Security
BCRYPT_ROUNDS=4

# Logging
LOG_CHANNEL=single
LOG_LEVEL=debug

# Database - SQLite in-memory (Testing)
DB_CONNECTION=sqlite
DB_DATABASE=:memory:

# Session & Cache
SESSION_DRIVER=array
CACHE_STORE=array

# Queue
QUEUE_CONNECTION=sync

# Broadcasting
BROADCAST_CONNECTION=log

# Filesystem
FILESYSTEM_DISK=local

# Mail
MAIL_MAILER=array
MAIL_FROM_ADDRESS="test@domaindesk.test"
MAIL_FROM_NAME="${APP_NAME}"

# Vite
VITE_APP_NAME="${APP_NAME}"

# Registrar - Mock (Testing)
REGISTRAR_TIMEOUT=10
REGISTRAR_ENABLE_LOGGING=false
REGISTRAR_RATE_LIMIT_ATTEMPTS=1000
REGISTRAR_CACHE_TTL=0

# Mock Registrar
MOCK_SIMULATE_DELAYS=false
MOCK_DELAY_MS=0
MOCK_FAILURE_RATE=0
MOCK_TRACK_HISTORY=true

# Testing Settings
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false
