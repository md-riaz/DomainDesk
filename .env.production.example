# ===========================================
# DomainDesk - Production Environment
# ===========================================
# Copy this file to .env and configure for production

# Application
APP_NAME="DomainDesk"
APP_ENV=production
APP_KEY=base64:GENERATE_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://yourdomain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

# Security
BCRYPT_ROUNDS=12
SESSION_SECURE_COOKIE=true

# Logging
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# Database - PostgreSQL (Production)
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=domaindesk_production
DB_USERNAME=domaindesk
DB_PASSWORD=SECURE_PASSWORD_HERE

# Session & Cache - Redis (Production)
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.yourdomain.com

CACHE_STORE=redis
CACHE_PREFIX=domaindesk_

# Queue - Redis (Production)
QUEUE_CONNECTION=redis

# Redis
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=REDIS_PASSWORD_HERE
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2

# Broadcasting
BROADCAST_CONNECTION=log

# Filesystem - S3 (Production)
FILESYSTEM_DISK=s3
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=domaindesk-production
AWS_USE_PATH_STYLE_ENDPOINT=false

# Mail - SendGrid/AWS SES (Production)
MAIL_MAILER=smtp
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USERNAME=apikey
MAIL_PASSWORD=YOUR_SENDGRID_API_KEY
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Alternative: AWS SES
# MAIL_MAILER=ses
# AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
# AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
# AWS_DEFAULT_REGION=us-east-1

# Vite
VITE_APP_NAME="${APP_NAME}"

# ===========================================
# Registrar Configuration
# ===========================================

REGISTRAR_TIMEOUT=30
REGISTRAR_ENABLE_LOGGING=true
REGISTRAR_RATE_LIMIT_ATTEMPTS=60
REGISTRAR_RATE_LIMIT_DECAY=1
REGISTRAR_CACHE_TTL=300

# ResellerClub Configuration
RESELLERCLUB_API_URL=https://httpapi.com/api
RESELLERCLUB_TEST_MODE=false
RESELLERCLUB_AUTH_USERID=YOUR_RESELLER_ID
RESELLERCLUB_API_KEY=YOUR_API_KEY
RESELLERCLUB_NS1=ns1.yourdomain.com
RESELLERCLUB_NS2=ns2.yourdomain.com

# LogicBoxes Configuration
LOGICBOXES_API_URL=https://httpapi.com/api
LOGICBOXES_TEST_MODE=false
LOGICBOXES_AUTH_USERID=YOUR_LOGICBOXES_ID
LOGICBOXES_API_KEY=YOUR_API_KEY

# ===========================================
# Application Settings
# ===========================================

# Default Timezone
APP_TIMEZONE=UTC

# Currency
CURRENCY=USD
CURRENCY_SYMBOL=$

# Pagination
PAGINATION_PER_PAGE=15
PAGINATION_MAX_PER_PAGE=100

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT=60

# Auto-renewal Settings
AUTO_RENEWAL_DAYS_BEFORE=7
AUTO_RENEWAL_RETRY_ATTEMPTS=3
AUTO_RENEWAL_RETRY_INTERVAL=24

# Domain Expiry Notifications
EXPIRY_NOTIFICATION_DAYS=60,30,7,1

# Wallet Low Balance Alert
WALLET_LOW_BALANCE_THRESHOLD=50

# ===========================================
# Monitoring & Analytics
# ===========================================

# Sentry (Error Tracking)
SENTRY_LARAVEL_DSN=YOUR_SENTRY_DSN

# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ===========================================
# Security
# ===========================================

# CORS
CORS_ALLOWED_ORIGINS=https://yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Content Security Policy
CSP_ENABLED=true

# ===========================================
# Backup
# ===========================================

BACKUP_DISK=s3
BACKUP_RETENTION_DAYS=30

# ===========================================
# External Services
# ===========================================

# Stripe (Payment Processing)
STRIPE_KEY=pk_live_YOUR_STRIPE_KEY
STRIPE_SECRET=sk_live_YOUR_STRIPE_SECRET
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# Twilio (SMS Notifications)
TWILIO_SID=YOUR_TWILIO_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_TOKEN
TWILIO_PHONE_NUMBER=+1234567890

# Pusher (Real-time Broadcasting)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1
